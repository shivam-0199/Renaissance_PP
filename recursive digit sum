
int superDigit(string n, int k) {
        int ans;
         if(n.length()==1){
        ans= n[0]-'0';
        return ans;
    }
        ans=0;
        for(int i=0;i<n.length();i++){
           
            ans=ans+(n[i]-'0')*k;
        }
        if(ans>9){
            n=to_string(ans);
           superDigit(n,1);
        }
        else{
            return ans;
        }
}
