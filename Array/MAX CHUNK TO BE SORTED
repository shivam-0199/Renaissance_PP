MAX CHUNK TO BE SORTED

#include <iostream>
using namespace std;
int main() {
    // your code goes here
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int pmax[n];
    pmax[0]=arr[0];
    for(int i=1;i<n;i++){
        pmax[i]=max(pmax[i-1], arr[i]);
    }
    int count=0;
    for(int j=0;j<n;j++){
        if(j==pmax[j]){
            count++;
        }
    }
    cout<<count;
    return 0;
}
